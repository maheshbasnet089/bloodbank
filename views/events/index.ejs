
<% layout('layouts/boilerplate')%>

    <div class="section features container-flow" style="margin-top: 40px;">
        <h1 class="section-title  fw-bolder">
            Posts & <span class="color-main">Events</span>
        </h1>
    
        <div class="container">
            <!-- <img src="uploads/1673531023253-login-page-ui.png" alt="fasd" srcset=""> -->
            <div class="row">
                <% events.forEach((event)=> { %>

                <div class="col-lg-3 col-12 mb-4 d-flex justify-content-center">
                    <div class="card text-start">
                        <img src="uploads/<%=event.imagePath%>" class="card-img-top card-img" alt="...">
                        <div class="card-body">
                            <span class="css-card-date fw-bold"><%= event.date %> - Admin</span>
                            <span class="css-card-date fw-bold"><%= event.address %></span>
                            <h5 class="card-title color-light fw-bold mt-0"><%=event.title %></h5>
                            <p class="card-text"><%= shortenText(event.description,30) %>
                            </p>
                            <a href="/events/<%=event.id%>" class="btn btn-primary border-0">View Details</a>
                        </div>
                    </div>
                </div>
                <% }) %>

               
            </div>
        </div>
    </div>
</body>
<!-- bs js -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</html>